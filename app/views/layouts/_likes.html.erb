<% if current_user.nil?  %>
    <i class="fas fa-heart"></i>
    <%= comic.likes.count %>
<% else %> 
  <% if comic.liked_by?(current_user)%>
    <%= link_to comic_likes_path(comic), method: :delete, class: "link" do %>
      <i class="fas fa-heart"></i>
      <%= comic.likes.count %>
    <% end %>
  <% else %>
    <%= link_to comic_likes_path(comic), method: :post do %>
      <i class="far fa-heart"></i>
      <%= comic.likes.count %>
    <% end %>
  <% end %>
<% end %>