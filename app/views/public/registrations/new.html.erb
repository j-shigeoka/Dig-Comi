<div>
  <%= flash[:notice] %>
</div>

<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :last_name, "姓" %>
    <%= f.text_field :last_name, autofocus: true, placeholder:"山田" %>
    <%= f.label :first_name, "名" %>
    <%= f.text_field :first_name, placeholder:"太郎" %>
  </div>
  
  <div class="field">
    <%= f.label :last_name_kana, "セイ" %>
    <%= f.text_field :last_name_kana, placeholder:"ヤマダ" %>
    <%= f.label :first_name_kana, "メイ" %>
    <%= f.text_field :first_name_kana, placeholder:"タロウ" %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 字以上)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワードを確認" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-success" %>
  </div>
<% end %>

  <div class="row mb-2">
    <h4 class="col col-md-3 offset-md-2 text-center mt-4" style="background-color:#DDD">
      <strong>既に登録済みの方</strong>
    </h4>
  </div>
  <div class="row mb-5 mt-3">
    <div class="col col-md-8 offset-md-3">
    <p><%= link_to "こちら", new_user_session_path %>　からログインしてください。</p>
  </div>
