<div>
  <%= flash[:notice] %>
</div>

<div class="container">
  <div class="row mb-5">
    <h1>新規会員登録</h1>
  </div>
  
  <div class="row">
    <div class="col-4"></div>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="field mb-2">
        <%= f.label :last_name, "姓" %>
        <%= f.text_field :last_name, autofocus: true, placeholder:"山田" %>
        <%= f.label :first_name, "名" %>
        <%= f.text_field :first_name, placeholder:"太郎" %>
      </div>
      
      <div class="field mb-2">
        <%= f.label :last_name_kana, "セイ" %>
        <%= f.text_field :last_name_kana, placeholder:"ヤマダ" %>
        <%= f.label :first_name_kana, "メイ" %>
        <%= f.text_field :first_name_kana, placeholder:"タロウ" %>
      </div>
    
      <div class="field mb-2">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, autocomplete: "email" %>
      </div>
    
      <div class="field mb-2">
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 字以上)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    
      <div class="field mb-5">
        <%= f.label :password_confirmation, "パスワードを確認" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    
      <div class="actions mb-5 text-center">
        <%= f.submit "　新規登録　", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
  
  <div class="row">
    <div class="col-4"></div>
    
    <div class="col-4 text-center">
      <h4>　　　既に登録済みの方</h4>
    </div>
  </div>
  
  <div class="row">
    <div class="col-4"></div>
    
    <div class="col-4 text-center">
      <p><%= link_to "　　　　　こちら", new_user_session_path %>からログインしてください。</p>
    </div>
  </div>
</div>