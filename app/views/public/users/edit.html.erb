<div class="container">
  <div class="row">
    <div class="col-3 text-right mb-5">
      <h1>会員情報変更</h1>
    </div>
  </div>
  
  <div class="row">
    <div class="col-4"></div>
    
    <%= form_with model: @user, url: users_information_path, method: :patch do |f| %>
      <div class="from-group mb-2">
        <%= f.label :last_name, "姓　" %>
        <%= f.text_field :last_name, autofocus: true %>
        <%= f.label :first_name, "名　" %>
        <%= f.text_field :first_name %>
      </div>
      
      <div class="from-group mb-2">
        <%= f.label :last_name_kana, "セイ" %>
        <%= f.text_field :last_name_kana %>
        <%= f.label :first_name_kana, "メイ" %>
        <%= f.text_field :first_name_kana %>
      </div>
      
      <div class="from-group mb-4">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email %>
      </div>
      
      
        <div class="actions">
          <%= f.submit "　　編集内容を保存　　", class:"btn btn-success" %>
    <% end %>
          <%= "　　　　　　" %>
          <%= link_to "　　退会する　　", users_unsubscribe_path, class: "btn btn-danger" %>
        </div>
    
  </div>
</div>