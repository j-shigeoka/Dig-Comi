<div class="container">
  <div class="row">
    <div class="col-2">
      <strong>マイページ</strong>
    </div>
  </div>
  
  <div class="row">
    <div class="col">
      <strong>登録情報</strong>
    </div>
    <div class="col">
      <%= link_to "編集する", users_information_edit_path, class: "btn btn-success" %>
    </div>
  </div>
  
  <div class="row-4">
    <table class="table col col-md-8 offset-md-2" border="2">
      <tr>
        <td>氏名</td>
        <td><%= @user.full_name %></td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td><%= @user.full_name_kana %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= @user.email %></td>
      </tr>
    </table>
  </div>
  
  <div class="row">
    <h5>いいね一覧</h5>
  </div>
  
  <div class="d-flex">
    <% @like_comics.each do |comic| %>
      <div>
        <%= link_to comic_path(comic.id) do %>
          <div>
            <% if comic.thumbnail.attached? %>    <%#サムネイルを表示する%>
              <%= image_tag comic.thumbnail, size: "100x100" %>
            <% else %>
              <%= image_tag 'no_image.jpg', size: "100x100" %>
            <% end%>
          </div>
          <div><%= comic.name %></div>
        <% end%>
        <div>
          <%= render 'layouts/likes', comic: comic %>
        </div>
      </div>
    <% end %>
    
  </div>
</div>

