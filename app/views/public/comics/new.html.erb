<div class="container">
  <div class="row">
    <div class="col-3 text-right">
      <h1>漫画投稿</h1>
    </div>
  </div>
  
  <div class="row">
    <div class="col-4"></div>
    
    <%= form_with model: @comic, url: comics_path, method: :post, local: true do |f| %>
      <div class="from-group mb-2">
        <%= f.label :thumbnail, 'サムネイル' %><br/>
        <%= f.file_field :thumbnail %>
      </div>
      
      <div class="from-group mb-2">
        <%= f.label :image, '漫画画像' %><br/>
        <%= f.file_field :images, multiple: true %>
      </div>
      
      <div class="from-group mb-2">
        <%= f.label :name, '漫画名' %>
        <%= f.text_field :name, placeholder: '漫画名', class: "from-control" %>
      </div>
      
      <div class="from-group mb-2">
        <%= f.label :introduction, '漫画説明欄' %>
        <%= f.text_area :introduction, rows: 10, placeholder: 'ここに説明文を記述します', class: "from-control" %>
      </div>
      
      <div class="from-group mb-5">
        <%= f.label :genre_id, 'ジャンル' %>
        <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name),{prompt: "-- 選択してください --"}, {class: "from-control"} %>
      </div>
      
      <div class="from-group text-right">
        <%= f.submit '　　投稿　　', class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>