<div class="container">
  <div class="row mb-5">
    <h1><%= @comic.name %>　</h1>
    
    <%= link_to "　削除　",  admin_comic_path(@comic.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %>
  </div>
  
  <div class="row mb-5">
    <div class="col">
      <div class="mb-2">
        <% @comic.images.each do |image| %>
          <%= image_tag image, size: "570x300" %>
        <% end %>
      </div>
      <div>
        <%= link_to "　読む　", comics_page_path, class: "btn btn-info" %>
      </div>
    </div>
    
    <div class="col">
      <table class="table table-striped">
        <tr>
          <th>名前</th>
          <td><%= @comic.name %></td>
        </tr>
        <tr>
          <th>投稿者</th>
          <td><%= @comic.user.full_name %></td>
        </tr>
        <tr>
          <th>紹介</th>
          <td><%= @comic.introduction %></td>
        </tr>
      </table>
    </div>
  </div>
  
  <div class="row">
  <%= render 'layouts/comments', comic: @comic %>
  </div>
</div>