<div class="container">
  <div class="row mb-5">
    <h1><%= @comic.name %>　</h1>
    
    <%= link_to "　削除　",  admin_comic_path(@comic.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %>
  </div>
  
  <div class="row mb-5">
    <div class="col">
      <div class="mb-2">
        <% if @comic.thumbnail.attached? %> <%#サムネイルを表示する%>
          <%= image_tag @comic.thumbnail, size: "570x300" %>
        <% else %>
          <%= image_tag '2389161.jpg', size: "200x200" %>
        <% end%>
      </div>
      <div>
        <%= link_to "　読む　", admin_comic_page_path(@comic.id), class: "btn btn-info" %>
      </div>
    </div>
    
    <div class="col">
      <table class="table table-striped">
        <tr>
          <th>漫画名</th>
          <td><%= @comic.name %></td>
        </tr>
        <tr>
          <th>投稿者</th>
          <td>
            <%= link_to admin_user_path(@user.id) do %>
              <%= @comic.user.full_name %>
            <% end %>
          </td>
        </tr>
        <tr>
          <th>紹介</th>
          <td><%= @comic.introduction %></td>
        </tr>
      </table>
    </div>
  </div>
  
  <div class="row">
  <%= render 'layouts/comments', comic: @comic %>
  </div>
</div>