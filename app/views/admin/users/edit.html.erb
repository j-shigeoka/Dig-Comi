<div class="container">
  <div class="row">
    <h1>
      <%= @user.full_name %>さんの<strong>会員情報編集</strong>
    </h1>
  </div>
  
  <div class="row">
    <table>
      <tr>
        <td>会員ID</td>
        <td><%= @user.id %></td>
      </tr>
      <%= form_with model: @user, url: admin_user_path, method: :patch do |f| %>
        <tr>
          <td>氏名</td>
          <td>
            <%= f.text_field :last_name, autofocus: true, placeholder: "山田" %>
            <%= f.text_field :first_name, placeholder: "太郎" %>
          </td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td>
            <%= f.text_field :last_name_kana, placeholder: "ヤマダ" %>
            <%= f.text_field :first_name_kana, placeholder: "タロウ" %>
          </td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td>
            <%= f.email_field :email, placeholder:"sample@example.com" %>
          </td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td>
            <%= f.radio_button :is_deleted, :false %>
            <%= f.label :is_deleted, "有効" %>
            <%= f.radio_button :is_deleted, :true %>
            <%= f.label :is_deleted, "退会" %>
          </td>
        </tr>
        <tr>
          <td><%= f.submit "変更を保存", class: "btn btn-success" %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>