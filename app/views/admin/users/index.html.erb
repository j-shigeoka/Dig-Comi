<div class="container">
  <div class="row mb-5">
    <h1>会員一覧</h1>
  </div>
  
  <div class="row">
    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td>
              <%= link_to admin_user_path(user.id) do %>
                <%= user.full_name %>
              <% end %>
            </td>
            <td><%= user.email %></td>
            <% if user.is_deleted == false %>
              <td class="text-success font-weight-bold">有効</td>
            <% else %>
              <td class="text-secondary font-weight-bold">退会</td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
