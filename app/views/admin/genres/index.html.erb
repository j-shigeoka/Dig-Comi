<div class="container">
  <div class="row mb-5">
    <h1>ジャンル一覧・追加</h1>
  </div>
  
  <div class="row mb-5">
    <%= form_with model: @genre, url: admin_genres_path do |f| %>
      <div>
        <%= f.label :name, 'ジャンル名' %>
        <%= f.text_field :name %>
        <%= f.submit '新規登録', class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
  
  <div class="row">
    <div class="col-4">
      <table class="table table-striped">
        <tr class="thead-dark">
          <th>ジャンル</th>
        </tr>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td class="text-center"><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
  
</div>