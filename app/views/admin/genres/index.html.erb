<strong>ジャンル一覧・追加</strong>

<table>
  <%= form_with model: @genre, url: admin_genres_path do |f| %>
  <tbody>
    <tr>
        <td><%= f.label :name, 'ジャンル名' %></td>
        <td><%= f.text_field :name %></td>
        <td><%= f.submit '新規登録', class: "btn btn-success" %></td>
      
    </tr>
  </tbody>
  <% end %>
  <table>
    <thead>
      <tr>
        <th>ジャンル</th>
      </tr>
    </thead>
    
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</table>