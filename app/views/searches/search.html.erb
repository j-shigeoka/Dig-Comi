<h1>検索結果</h1>

<table class="table table-hover table-inverse">
  <% if @range == "User" %>
    <tbody>
      <% if @users.present? %>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.full_name %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  <% elsif @range == "Comic" %>
    <tbody>
      <% if @comics.present? %>
        <% @comics.each do |comic| %>
          <tr>
            <td><%= comic.name %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  <% else %>
    <tbody>
      <% if @genres.present? %>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  <% end %>
</table>